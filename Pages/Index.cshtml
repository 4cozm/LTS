@page
@model LTS.Pages.IndexModel
@{
    ViewData["Title"] = "Login";
}
<div class="login-container">
    <h2>로그인</h2>

<form class="form-container"  method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Username">ID</label>
        <input asp-for="Username" id="Username" name="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">PW</label>
        <input asp-for="Password" id="Password" name="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
@section Styles {
    <link rel="stylesheet" href="~/css/Index.css"/>
}