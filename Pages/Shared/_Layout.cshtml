<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LTS 쿠폰 시스템</title>
    <link rel="stylesheet" href="/css/Layout.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
    @RenderSection("Styles", required: false)

</head>
@{
    var path = Context.Request.Path.ToString().ToLower();
    var hideNavPages = new[] { "/", "/index", "/register", "/ChangePassword" }; //네비게이션 숨길 메뉴
    var showNav = !hideNavPages.Contains(path);
}

<body>
    <header class="header">
        <div class="container">
            <img class="LTS_logo" src="/images/LTS_logo.webp" alt="error-LTS logo" />
        </div>
    </header>
    <ul class="nav nav-pills justify-content-center my-3">
        @if (showNav)
        {
            <ul class="nav nav-pills justify-content-center my-3">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                        aria-expanded="false">
                        선불권 관리
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/PurchasePrepaid">선불권 구매</a></li>
                        <li><a class="dropdown-item" href="#">선불권 환불/취소</a></li>
                        <li><a class="dropdown-item" href="#">선불권 선물</a></li>
                        <li><a class="dropdown-item" href="#">선불권 사용</a></li>
                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle disabled" data-bs-toggle="dropdown" href="#" aria-disabled="true">
                        쿠폰 관리
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">쿠폰 등록</a></li>
                        <li><a class="dropdown-item" href="#">쿠폰 취소</a></li>
                        <li><a class="dropdown-item" href="#">쿠폰 선물</a></li>
                        <li><a class="dropdown-item" href="#">쿠폰 사용</a></li>
                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle disabled" data-bs-toggle="dropdown" href="#" >
                        내정보
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#"aria-disabled="true">전화번호 변경</a></li>
                        <li><a class="dropdown-item" href="/ChangePassword">비밀번호 변경</a></li>
                        <li><a class="dropdown-item" href="#"aria-disabled="true">직책 변경</a></li>
                        <li><a class="dropdown-item" href="/Register">직원 생성</a></li>
                    </ul>
                </li>

                <li class="nav-item">
                    <a class="nav-link disabled" asp-page="#" aria-disabled="true">Q&A</a>
                </li>
            </ul>
        }

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="footer">
            <div class="footer-container">© 2025 - Laser Tag Sports</div>
        </footer>
        @RenderSection("Scripts", required: false)
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
</body>
@await Html.PartialAsync("_NoticeModal", TempData["Notice"] as string)

</html>